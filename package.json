{
    "name": "frame",
    "version": "1.0.0",
    "packageManager": "npm@10.9.3",
    "description": "Alyxnet Frame â€” Multi-tenant SaaS platform",
    "main": "index.js",
    "workspaces": [
        "frontend",
        "backend",
        "desktop",
        "mobile"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "start": "concurrently \"mongod --bind_ip_all\" \"npm run start --workspace=backend\" \"npx serve -s frontend/dist -l 3000\"",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky || true",
        "test": "turbo run test"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "concurrently": "^9.2.1",
        "react-is": "^18.3.1",
        "socket.io-client": "^4.8.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.5",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.0",
        "prettier": "^3.5.3",
        "turbo": "^2.8.10",
        "typescript-eslint": "^8.56.0"
    },
    "lint-staged": {
        "*.{js,ts,tsx,jsx}": [
            "prettier --write",
            "eslint --fix --no-error-on-unmatched-pattern"
        ],
        "*.{json,md,css,html,yml,yaml}": [
            "prettier --write"
        ]
    }
}
